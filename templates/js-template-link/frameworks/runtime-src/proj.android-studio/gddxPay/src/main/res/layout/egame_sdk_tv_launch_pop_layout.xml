<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >
    
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dx_80" 
        android:background="@drawable/egame_tv_sdk_launch_bg_pop_tittle_green">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="关注我们" 
            android:textColor="#ffffff"
            android:textSize="@dimen/_28_sp_egame_textSize"/>

        

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dx_27"
            android:text="关闭"
            android:textColor="#ffffff"
            android:textSize="@dimen/_24_sp_egame_textSize" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dx_40"
            android:layout_height="@dimen/dx_40"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dx_8"
            android:layout_toLeftOf="@+id/textView2"
            android:src="@drawable/egame_tv_sdk_launch_ico_back" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/egame_tv_sdk_launch_bg_pop"
        android:paddingRight="@dimen/dx_67"
         >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dx_67"
            android:layout_marginTop="@dimen/dx_60"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dx_321"
                android:layout_height="@dimen/dx_321"
                android:src="@drawable/egame_tv_sdk_launch_two_dimensional_wechat" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dx_12"
                android:text="微信公众号"
                android:textColor="#777777"
                android:textSize="@dimen/_20_sp_egame_textSize" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dx_36"
                android:layout_marginTop="@dimen/dx_1"
                android:text="咨询、抽奖、贴心服务"
                android:textColor="#505050"
                android:textSize="@dimen/_20_sp_egame_textSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dx_104"
            android:layout_toRightOf="@+id/linearLayout1"
            android:layout_marginTop="@dimen/dx_60"
            
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="@dimen/dx_321"
                android:layout_height="@dimen/dx_321"
                android:src="@drawable/egame_tv_sdk_launch_two_dimensional_qq" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dx_12"
                android:text="玩家QQ群"
                android:textColor="#777777"
                android:textSize="@dimen/_20_sp_egame_textSize" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dx_36"
                android:layout_marginTop="@dimen/dx_1"
                android:text="攻略、玩伴、解决难题"
                android:textColor="#505050"
                android:textSize="@dimen/_20_sp_egame_textSize" />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
