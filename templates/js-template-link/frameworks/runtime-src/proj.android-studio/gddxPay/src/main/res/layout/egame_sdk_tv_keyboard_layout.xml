<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dx_10"
    android:layout_marginLeft="@dimen/dx_30"
    android:layout_marginTop="@dimen/dx_10" >

    <Button
        android:id="@+id/key_1"
        style="@style/search_keybord_full"
        android:tag="1"
        android:text="1" 
        android:textStyle="bold"
        android:textSize="@dimen/_32_sp_egame_textSize"
        >
    </Button>

    <Button
        android:id="@+id/key_2"
        style="@style/search_keybord_full"
        android:layout_toRightOf="@+id/key_1"
        android:tag="2"
        android:text="2" 
        android:textStyle="bold"
        android:textSize="@dimen/_32_sp_egame_textSize"
        >
    </Button>

    <Button
        android:id="@+id/key_3"
        style="@style/search_keybord_full"
        android:layout_toRightOf="@+id/key_2"
        android:tag="3"
        android:text="3" 
        android:textStyle="bold"
        android:textSize="@dimen/_32_sp_egame_textSize"
        >
    </Button>

    <Button
        android:id="@+id/key_4"
        style="@style/search_keybord_full"
        android:layout_below="@+id/key_1"
        android:tag="4"
        android:text="4" 
        android:textStyle="bold"
        android:textSize="@dimen/_32_sp_egame_textSize"
        >
    </Button>

    <Button
        android:id="@+id/key_5"
        style="@style/search_keybord_full"
        android:layout_below="@+id/key_2"
        android:layout_toRightOf="@+id/key_4"
        android:tag="5"
        android:text="5" 
        android:textStyle="bold"
        android:textSize="@dimen/_32_sp_egame_textSize"
        >
    </Button>

    <Button
        android:id="@+id/key_6"
        style="@style/search_keybord_full"
        android:layout_below="@+id/key_3"
        android:layout_toRightOf="@+id/key_5"
        android:tag="6"
        android:text="6" 
        android:textStyle="bold"
        android:textSize="@dimen/_32_sp_egame_textSize"
        >
    </Button>

    <Button
        android:id="@+id/key_7"
        style="@style/search_keybord_full"
        android:layout_below="@+id/key_4"
        android:tag="7"
        android:text="7" 
        android:textStyle="bold"
        android:textSize="@dimen/_32_sp_egame_textSize"
        >
    </Button>

    <Button
        android:id="@+id/key_8"
        style="@style/search_keybord_full"
        android:layout_below="@+id/key_5"
        android:layout_toRightOf="@+id/key_7"
        android:tag="8"
        android:text="8" 
        android:textStyle="bold"
        android:textSize="@dimen/_32_sp_egame_textSize"
        >
    </Button>

    <Button
        android:id="@+id/key_9"
        style="@style/search_keybord_full"
        android:layout_below="@+id/key_6"
        android:layout_toRightOf="@+id/key_8"
        android:tag="9"
        android:text="9" 
        android:textStyle="bold"
        android:textSize="@dimen/_32_sp_egame_textSize"
        >
    </Button>

    <Button
        android:id="@+id/pw_keybord_key_next"
        style="@style/search_keybord_full"
        android:layout_below="@+id/pw_keybord_key_up"
        android:layout_toRightOf="@+id/key_6"
        android:text="下一行"
        android:textSize="@dimen/_16_sp_egame_textSize" >
    </Button>

    <Button
        android:id="@+id/key_0"
        style="@style/search_keybord_full"
        android:layout_width="@dimen/dx_152"
        android:layout_below="@+id/key_7"
        android:tag="0"
        android:text="0" 
        android:textStyle="bold"
        android:textSize="@dimen/_32_sp_egame_textSize"
        android:background="@drawable/egame_sdk_tv_key_0_background_selector"
        >
    </Button>

    <Button
        android:id="@+id/pw_keybord_key_up"
        style="@style/search_keybord_full"
        android:layout_toRightOf="@+id/key_3"
        android:text="上一行"
        android:textSize="@dimen/_16_sp_egame_textSize" >
    </Button>

    <Button
        android:id="@+id/pw_keybord_key_sure"
        style="@style/search_keybord_full"
        android:layout_below="@+id/key_9"
        android:layout_toRightOf="@+id/key_0"
        android:text="确定" >
    </Button>

    <Button
        android:id="@+id/pw_keybord_key_remove"
        style="@style/search_keybord_full"
        android:layout_below="@+id/pw_keybord_key_next"
        android:layout_toRightOf="@+id/key_9"
        android:background="@drawable/egame_sdk_tv_keypad_back_selector" >
    </Button>

    <Button
        android:id="@+id/pw_keybord_key_back"
        style="@style/search_keybord_full"
        android:layout_below="@+id/pw_keybord_key_remove"
        android:layout_toRightOf="@+id/pw_keybord_key_sure"
        android:text="取消" >
    </Button>

</RelativeLayout>