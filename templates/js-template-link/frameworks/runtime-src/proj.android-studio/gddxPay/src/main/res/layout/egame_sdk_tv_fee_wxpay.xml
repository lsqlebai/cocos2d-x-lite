<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/egame_sdk_tv_background"
    android:gravity="center"
    android:orientation="vertical" >

    <!-- 总的付费界面 -->

    <LinearLayout
        android:id="@+id/egame_tv_fee_wxpay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/egame_tv_fee_wxpay_layout_title"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dx_70"
                android:focusable="false"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dx_20"
                android:text="微信支付"
                android:textColor="#ffffff"
                android:textSize="@dimen/_28_sp_egame_textSize" />
        </LinearLayout>
        <!-- 主显示界面 -->

        <LinearLayout
            android:id="@+id/egame_tv_fee_wxpay_layout_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dx_1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dx_40"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/bg"
                        android:layout_width="@dimen/dx_1075"
                        android:layout_height="@dimen/dx_129"
                        android:src="@drawable/egame_sdk_tv_payment_weixin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dx_40"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/qr_code_wx"
                        android:layout_width="@dimen/dx_320"
                        android:layout_height="@dimen/dx_320"
                        android:background="#ffffff"
                        android:padding="@dimen/dx_10"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dx_50"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/egame_tv_fee_wxpay_price"
                                android:layout_width="@dimen/dx_147"
                                android:layout_height="@dimen/dx_50"
                                android:background="@drawable/egame_sdk_tv_payment_form_left_on"
                                android:focusable="false"
                                android:gravity="center"                               
                                android:textColor="#48c2ff"
                                android:textSize="@dimen/_20_sp_egame_textSize" />

                            <TextView
                                android:id="@+id/price_wxpay"
                                android:layout_width="@dimen/dx_278"
                                android:layout_height="@dimen/dx_50"
                                android:background="@drawable/egame_sdk_tv_payment_form_right_on"
                                android:focusable="false"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dx_24"
                                android:text="2.00元"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/_20_sp_egame_textSize" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/egame_tv_fee_wxpay_types"
                                android:layout_width="@dimen/dx_147"
                                android:layout_height="@dimen/dx_50"
                                android:background="@drawable/egame_sdk_tv_payment_form_left_below"
                                android:focusable="false"
                                android:gravity="center"
                                android:textColor="#48c2ff"
                                android:textSize="@dimen/_20_sp_egame_textSize" />

                            <TextView
                                android:id="@+id/egame_tv_fee_wxpay_types_info"
                                android:layout_width="@dimen/dx_278"
                                android:layout_height="@dimen/dx_50"
                                android:background="@drawable/egame_sdk_tv_payment_form_right_below"
                                android:focusable="false"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dx_24"                                
                                android:textColor="#ffffff"
                                android:textSize="@dimen/_20_sp_egame_textSize" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/egame_tv_fee_wxpay_layout_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dx_50"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/wxpay_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:text="微信支付微信支付微信支付微信支付微信支付微信支付"
                android:textColor="#ffffff"
                android:textSize="@dimen/_20_sp_egame_textSize" />
        </LinearLayout>
    </LinearLayout>

    <!-- loading布局 -->

    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/egame_sdk_tv_mask"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dx_20" >

        <ProgressBar
            android:id="@+id/loadingProgress"
            android:layout_width="@dimen/dx_30"
            android:layout_height="@dimen/dx_30" />

        <Button
            android:id="@+id/loadingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新加载"
            android:textSize="@dimen/_20_sp_egame_textSize"
            android:visibility="gone" />

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/_20_sp_egame_textSize" />
    </LinearLayout>

 
   

 

</FrameLayout>