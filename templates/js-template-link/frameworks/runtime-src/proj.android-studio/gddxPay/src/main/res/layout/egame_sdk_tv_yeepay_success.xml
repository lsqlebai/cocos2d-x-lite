<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/egame_sdk_tv_icon_finish"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="支付成功"
            android:textSize="@dimen/_32_sp_egame_textSize" />
    </LinearLayout>

    <TextView
        android:id="@+id/yeepay_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="恭喜您成功支付金额8元"
        android:textSize="@dimen/_24_sp_egame_textSize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="注意：您已经成功绑定信用卡，如果解绑请至支付发起页面"
        android:textSize="@dimen/_24_sp_egame_textSize" />

</LinearLayout>