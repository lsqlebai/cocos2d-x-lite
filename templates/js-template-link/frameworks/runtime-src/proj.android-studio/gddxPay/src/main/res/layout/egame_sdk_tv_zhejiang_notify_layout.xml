<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/zjTitleLayout"
        android:layout_width="@dimen/dx_900"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/egame_sdk_tv_zj_notify_bg"
        android:focusable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="温馨提示:"
            android:textColor="#2D3931"
            android:textSize="@dimen/dx_25"/>
        
        <TextView 
            android:id="@+id/zjNotifyResultMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dx_10"
            android:layout_marginLeft="@dimen/dx_15"
            android:layout_marginRight="@dimen/dx_15"
            android:textColor="#2D3931"
            android:textSize="@dimen/dx_25"/>
        
        <LinearLayout 
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dx_50"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品包："
                android:textColor="#606450"
                android:textSize="@dimen/dx_20"/>
            <TextView 
                android:id="@+id/zjNotifyTextProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#606450"
                android:textSize="@dimen/dx_20"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资费说明："
                android:textColor="#606450"
                android:textSize="@dimen/dx_20"/>
            <TextView 
                android:id="@+id/zjNotifyTextPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#606450"
                android:textSize="@dimen/dx_20"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/月"
                android:textColor="#606450"
                android:textSize="@dimen/dx_20"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zjNotifyBottonLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="@dimen/dx_10"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnNotifySure"
                style="@style/egame_button_text_sytle"
                android:layout_width="@dimen/dx_180"
                android:layout_height="@dimen/dx_60"
                android:layout_gravity="center"
                android:focusable="true"
                android:text="确定"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>